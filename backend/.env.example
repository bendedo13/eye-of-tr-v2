# Backend Environment Variables

# API Settings
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin
ADMIN_EMAIL=admin@faceseek.io
ADMIN_API_KEY=your-admin-api-key

# Database
DATABASE_URL=sqlite:///./faceseek.db
# For PostgreSQL: postgresql+psycopg2://user:password@localhost:5432/faceseek

# Redis (optional)
# REDIS_URL=redis://localhost:6379/0

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://face-seek.com,https://www.face-seek.com

# Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Public Base URL
PUBLIC_BASE_URL=https://www.face-seek.com

# API Keys (optional)
# BING_API_KEY=
# YANDEX_API_KEY=
# YANDEX_FOLDER_ID=
# FACECHECK_API_KEY=
# SERPAPI_API_KEY=
# RAPIDAPI_KEY=
# OPENAI_API_KEY=

# Email (SMTP) - optional
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@faceseek.io

# LemonSqueezy (optional)
# LEMONSQUEEZY_API_KEY=
# LEMONSQUEEZY_STORE_ID=
# LEMONSQUEEZY_WEBHOOK_SECRET=
